<?xml version="1.0" encoding="utf-8"?>
<com.usacheow.apptest.details.WarningShimmerTileView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="12dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/radius_16"
    app:cardElevation="@dimen/elevation_16">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer"
        style="@style/SimpleShimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        tools:shimmer_base_alpha="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topLineView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shimmer_line"
                android:textAppearance="?textAppearanceBody2" />

            <TextView
                android:id="@+id/middleLineView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_shimmer_line"
                android:textAppearance="?textAppearanceBody1" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</com.usacheow.apptest.details.WarningShimmerTileView>