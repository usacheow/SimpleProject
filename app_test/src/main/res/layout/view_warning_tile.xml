<?xml version="1.0" encoding="utf-8"?>
<com.usacheow.apptest.details.WarningTileView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="12dp"
    app:cardBackgroundColor="@color/surface"
    app:cardElevation="@dimen/elevation_16"
    app:cardCornerRadius="@dimen/radius_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="?selectableItemBackground"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/topDescriptionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="@dimen/text_alpha"
            android:ellipsize="end"
            android:lines="1"
            android:textAppearance="?textAppearanceBody2"
            tools:text="Subtitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/valueView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="?textAppearanceBody1"
            tools:text="Title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bottomDescriptionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="@dimen/text_alpha"
            android:ellipsize="end"
            android:lines="1"
            android:textAppearance="?textAppearanceBody2"
            tools:text="Description" />
    </LinearLayout>
</com.usacheow.apptest.details.WarningTileView>