<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Simple.Input" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/input_min_height</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_medium</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_medium</item>
    </style>

    <style name="Simple.Input.Outlined"/>

    <style name="Simple.Input.Filled" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

</resources>
