<?xml version="1.0" encoding="utf-8"?>
<com.usacheow.coreuiview.molecule.HeaderTileView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:paddingHorizontal="@dimen/left_right_margin"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:textAppearance="?textAppearanceHeadlineLarge"
        tools:text="@tools:sample/lorem" />
</com.usacheow.coreuiview.molecule.HeaderTileView>