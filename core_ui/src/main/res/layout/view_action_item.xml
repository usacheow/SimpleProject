<?xml version="1.0" encoding="utf-8"?>
<com.usacheow.coreui.uikit.molecule.ActionItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SimpleShimmerLayout"
    android:padding="@dimen/left_right_margin"
    android:background="?selectableItemBackground"
    tools:shimmer_base_alpha="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="@dimen/left_right_margin"
            app:riv_corner_radius="@dimen/radius_16"
            tools:src="@tools:sample/avatars"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/titleView"
                    style="@style/TextBody1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    tools:text="@tools:sample/full_names" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchView"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:visibility="gone"
                    tools:checked="true"
                    tools:visibility="visible" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12dp"
                    android:visibility="gone"
                    tools:checked="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/subtitleView"
                style="@style/TextBody2_60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="@tools:sample/cities" />
        </LinearLayout>
    </LinearLayout>
</com.usacheow.coreui.uikit.molecule.ActionItemView>