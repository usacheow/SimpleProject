<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_margin="16dp"
    app:cardCornerRadius="@dimen/radius_16"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/colorGreyCard"
    app:cardElevation="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/errorMessageTitleView"
            style="@style/TextSubtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="@dimen/left_right_margin"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/errorMessageDescriptionView"
            style="@style/TextBody2_60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="@dimen/left_right_margin"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="@tools:sample/lorem/random" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/repeatButton"
            style="@style/SimpleButtonOutlined"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="@dimen/left_right_margin"
            android:text="@string/repeat" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>