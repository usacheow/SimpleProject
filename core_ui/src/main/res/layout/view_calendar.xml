<?xml version="1.0" encoding="utf-8"?>
<com.usacheow.coreui.uikit.calendar.widget.CalendarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendarItemRootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/left_right_margin"
    android:layout_marginEnd="@dimen/left_right_margin"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/colorBackground"
    app:strokeWidth="@dimen/stroke_card"
    app:strokeColor="@color/cardStroke"
    app:cardElevation="@dimen/elevation_0"
    app:cardCornerRadius="@dimen/radius_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/calendarPrevButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:layout_gravity="center_vertical"
                android:background="?selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_prev" />

            <TextView
                android:id="@+id/calendarMonthNameView"
                style="@style/TextSubtitle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_margin="@dimen/left_right_margin"
                tools:text="April '20" />

            <ImageView
                android:id="@+id/calendarNextButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:layout_gravity="center_vertical"
                android:background="?selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_next" />
        </LinearLayout>

        <include
            android:id="@+id/calendarWeekView"
            layout="@layout/view_week_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp" />

        <include
            android:id="@+id/calendarMonthView"
            layout="@layout/view_month_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />
    </LinearLayout>
</com.usacheow.coreui.uikit.calendar.widget.CalendarView>