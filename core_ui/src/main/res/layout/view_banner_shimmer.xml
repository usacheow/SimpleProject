<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/surfaceSecondary"
    app:cardElevation="@dimen/elevation_0">

    <com.facebook.shimmer.ShimmerFrameLayout
        style="@style/SimpleShimmerLayout"
        android:layout_width="wrap_content"
        app:shimmer_auto_start="true"
        tools:shimmer_base_alpha="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/left_right_margin">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_shimmer_line"
                android:lines="2"
                android:textAppearance="?textAppearanceHeadline6" />

            <View
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="end"
                android:background="@drawable/bg_shimmer_circle" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</com.google.android.material.card.MaterialCardView>