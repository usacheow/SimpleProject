<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeBridge" parent="Theme.MaterialComponents.Light.NoActionBar"/>
    <style name="ModalDialogThemeBridge" parent="Theme.MaterialComponents.Light.Dialog"/>
    <style name="BottomSheetDialogThemeBridge" parent="Theme.MaterialComponents.Light.BottomSheetDialog"/>

    <style name="AppTheme" parent="AppThemeBridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/symbol</item>

        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/symbol</item>

        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorPrimaryInverse">@color/textInverse</item>
        <item name="android:textColorSecondary">@color/text</item>
        <item name="android:textColorSecondaryInverse">@color/textInverse</item>
        <item name="iconTint">@color/icon</item>

        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>

        <item name="android:windowBackground">?colorPrimary</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="ModalDialogTheme" parent="ModalDialogThemeBridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/symbol</item>

        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/symbol</item>

        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorPrimaryInverse">@color/textInverse</item>
        <item name="android:textColorSecondary">@color/text</item>
        <item name="android:textColorSecondaryInverse">@color/textInverse</item>
        <item name="iconTint">@color/icon</item>

        <item name="android:statusBarColor">@color/colorStatusBarForModal</item>
        <item name="android:navigationBarColor">@color/colorNavigationBarForModal</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="BottomSheetDialogThemeBridge">
        <item name="bottomSheetStyle">@style/SimpleBottomSheetStyle</item>
    </style>

</resources>
