<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

    <include
        android:id="@+id/header"
        layout="@layout/simple_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/viewsScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextBody1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/left_right_margin"
                    android:text="Simple button" />

                <com.google.android.material.button.MaterialButton
                    style="@style/SimpleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/left_right_margin"
                    android:text="Button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextBody1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/left_right_margin"
                    android:text="Elevation button" />

                <com.google.android.material.button.MaterialButton
                    style="@style/SimpleButtonElevation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/left_right_margin"
                    android:text="Button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextBody1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/left_right_margin"
                    android:text="Outlined button" />

                <com.google.android.material.button.MaterialButton
                    style="@style/SimpleButtonOutlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/left_right_margin"
                    android:text="Button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextBody1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/left_right_margin"
                    android:text="Elevation button" />

                <com.google.android.material.button.MaterialButton
                    style="@style/SimpleButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/left_right_margin"
                    android:text="Button" />
            </LinearLayout>

            <TextView
                style="@style/TextBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/left_right_margin"
                android:text="Toggle buttons" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/left_right_margin"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    style="@style/SimpleButtonOutlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First" />

                <com.google.android.material.button.MaterialButton
                    style="@style/SimpleButtonOutlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Second" />

                <com.google.android.material.button.MaterialButton
                    style="@style/SimpleButtonOutlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Third" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_big"
                android:background="@color/colorDivider" />

            <TextView
                style="@style/TextBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/left_right_margin"
                android:layout_marginTop="@dimen/left_right_margin"
                android:text="Simple input" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/SimpleInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/left_right_margin"
                app:endIconMode="password_toggle"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_lock">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/viewPasswordInput"
                    style="@style/TextBody1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hello World!"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:lines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/left_right_margin"
                android:text="Currency formatter" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/SimpleInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/left_right_margin"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_money">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/viewAmountInput"
                    style="@style/TextBody1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:lines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/left_right_margin"
                android:layout_marginTop="@dimen/left_right_margin"
                android:text="Phone number formatter" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/SimpleInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/left_right_margin"
                android:hint="Phone number"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_phone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/viewPhoneNumberInput"
                    style="@style/TextBody1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:lines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_big"
                android:background="@color/colorDivider" />

            <TextView
                style="@style/TextBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/left_right_margin"
                android:layout_marginTop="16dp"
                android:text="Chips layout" />

            <com.usacheow.coreui.uikit.list.ChipsLayout
                android:id="@+id/chipsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/left_right_margin" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_big"
                android:background="@color/colorDivider" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>