<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header"
        layout="@layout/simple_app_bar_layout" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/listView"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextOverline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="Atoms" />

            <TextView
                android:id="@+id/fontsScreen"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="1. Fonts"
                android:background="?selectableItemBackground" />

            <TextView
                android:id="@+id/buttonsScreen"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="2. Buttons"
                android:background="?selectableItemBackground" />

            <TextView
                android:id="@+id/textInputsScreen"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="3. Text Inputs"
                android:background="?selectableItemBackground" />

            <TextView
                style="@style/TextOverline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="Molecules" />

            <TextView
                android:id="@+id/actionItemsScreen"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="1. Action Item"
                android:background="?selectableItemBackground" />

            <TextView
                android:id="@+id/listTileItemScreen"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="2. List Tile Item"
                android:background="?selectableItemBackground" />

            <TextView
                android:id="@+id/chipsGroupScreen"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="3. Chips Group"
                android:background="?selectableItemBackground" />

            <TextView
                android:id="@+id/radioTagListScreen"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="4. Radio Tag List"
                android:background="?selectableItemBackground" />

            <TextView
                android:id="@+id/informationItemsScreen"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="5. Information Items"
                android:background="?selectableItemBackground" />

            <TextView
                style="@style/TextOverline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="Organisms" />

            <TextView
                android:id="@+id/errorMessageViewScreen"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="1. Error Message View"
                android:background="?selectableItemBackground" />

            <TextView
                android:id="@+id/numPadViewScreen"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="2. Num Pad View"
                android:background="?selectableItemBackground" />

            <TextView
                style="@style/TextOverline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="Templates" />

            <TextView
                android:id="@+id/materialDialog"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="1. Material Dialog"
                android:background="?selectableItemBackground" />

            <TextView
                android:id="@+id/bottomDialog"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="2. Bottom Dialog"
                android:background="?selectableItemBackground" />

            <TextView
                android:id="@+id/bottomSheet"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="3. Bottom sheet"
                android:background="?selectableItemBackground" />

            <TextView
                android:id="@+id/modalScreen"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="4. Modal Fragment"
                android:background="?selectableItemBackground" />

            <TextView
                android:id="@+id/onboardingScreen"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="5. Onboarding Fragment"
                android:background="?selectableItemBackground" />

            <TextView
                style="@style/TextOverline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="Pages" />

            <TextView
                android:id="@+id/smsCodeScreen"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="1. SMS Code Fragment"
                android:background="?selectableItemBackground" />

            <TextView
                android:id="@+id/calendarListScreen"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="1. Calendar List"
                android:visibility="gone"
                android:background="?selectableItemBackground" />

            <TextView
                android:id="@+id/calendarWidgetScreen"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="2. Calendar Widget"
                android:visibility="gone"
                android:background="?selectableItemBackground" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.usacheow.coreui.uikit.template.SimpleBottomSheetLayout
        android:id="@+id/bottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/elevation_4"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        tools:visibility="gone">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/left_right_margin">

            <TextView
                style="@style/TextH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bottom" />

            <TextView
                style="@style/TextH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sheet" />

            <TextView
                style="@style/TextH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="example" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.usacheow.coreui.uikit.template.SimpleBottomSheetLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>