<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.usacheow.coreuiview.uikit.organism.SimpleAppBarLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="?textAppearanceDisplayLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Fragment 7"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            style="?materialButtonTonalStyle"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="60dp"
            android:text="Back" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backToRootButton"
            style="?materialButtonTonalStyle"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:text="Back to root" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backToFragment2Button"
            style="?materialButtonTonalStyle"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="40dp"
            android:text="Back to fragment 2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backToFragment4Button"
            style="?materialButtonTonalStyle"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:text="Back to fragment 4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backToFragment6Button"
            style="?materialButtonTonalStyle"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:text="Back to fragment 6" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.coordinatorlayout.widget.CoordinatorLayout>