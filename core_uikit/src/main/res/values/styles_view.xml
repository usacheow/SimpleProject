<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SimpleAppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorToolbar</item>
    </style>

    <style name="SimpleCollapsingToolbar" parent="Widget.Design.CollapsingToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="collapsedTitleGravity">start</item>
        <item name="expandedTitleGravity">bottom</item>
        <item name="collapsedTitleTextAppearance">@style/TextToolbarSmall</item>
        <item name="expandedTitleTextAppearance">@style/TextToolbarBig</item>
        <item name="expandedTitleMarginStart">20dp</item>
        <item name="expandedTitleMarginBottom">20dp</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="contentScrim">@color/transparent</item>
        <item name="statusBarScrim">@color/transparent</item>
        <item name="scrimAnimationDuration">250</item>
    </style>

    <style name="SimpleCollapsingToolbarContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="SimpleToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="SimpleButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="cornerRadius">@dimen/radius_8</item>
    </style>

    <style name="SimpleButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="cornerRadius">@dimen/radius_8</item>
    </style>

    <style name="SimpleButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="cornerRadius">@dimen/radius_8</item>
    </style>

    <style name="SimpleButtonElevation" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="cornerRadius">@dimen/radius_8</item>
        <item name="elevation">@dimen/elevation_4</item>
    </style>

    <style name="NumPadButton" parent="TextNumPad">
        <item name="android:layout_width">@dimen/num_pad_button_size</item>
        <item name="android:layout_height">@dimen/num_pad_button_size</item>
        <item name="android:layout_marginTop">@dimen/num_pad_button_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/num_pad_button_margin_vertical</item>
        <item name="android:layout_marginStart">@dimen/num_pad_button_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/num_pad_button_margin_horizontal</item>
        <item name="android:background">@drawable/ripple_circle</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SimpleInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_8</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_8</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_8</item>
    </style>

</resources>
