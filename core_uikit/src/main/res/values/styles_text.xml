<resources>

    <!--Base styles-->
    <style name="BaseTextView" parent="android:Widget.TextView" />

    <!--Dark styles-->
    <style name="TextHeaderDark">
        <item name="android:fontFamily">@style/RobotoLogo</item>
        <item name="android:textSize">@dimen/font_size_28sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleDark" parent="@style/BaseTextView">
        <item name="android:textAppearance">@style/RobotoSemiBold</item>
        <item name="android:textSize">@dimen/font_size_20sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextPrimaryDark">
        <item name="android:textAppearance">@style/RobotoRegular</item>
        <item name="android:textSize">@dimen/font_size_20sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextSecondaryDark" parent="@style/BaseTextView">
        <item name="android:textAppearance">@style/RobotoRegular</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextSecondaryDark_60" parent="@style/BaseTextView">
        <item name="android:textAppearance">@style/RobotoRegular</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="TextDescriptionDark" parent="@style/BaseTextView">
        <item name="android:textAppearance">@style/RobotoRegular</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextDescriptionDark_60" parent="@style/BaseTextView">
        <item name="android:textAppearance">@style/RobotoRegular</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="TextEmptyDark" parent="@style/BaseTextView">
        <item name="android:textAppearance">@style/RobotoRegular</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:alpha">0.6</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="TextDividerDark" parent="@style/BaseTextView">
        <item name="android:textAppearance">@style/RobotoRegular</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textSize">@dimen/font_size_10sp</item>
    </style>

    <!--Light styles-->
    <style name="TextHeaderLight">
        <item name="android:fontFamily">@style/RobotoLogo</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/colorTextNight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleLight" parent="@style/BaseTextView">
        <item name="android:textAppearance">@style/RobotoSemiBold</item>
        <item name="android:textSize">@dimen/font_size_20sp</item>
        <item name="android:textColor">@color/colorTextNight</item>
    </style>

    <style name="TextPrimaryLight" parent="@style/BaseTextView">
        <item name="android:textAppearance">@style/RobotoRegular</item>
        <item name="android:textSize">@dimen/font_size_20sp</item>
        <item name="android:textColor">@color/colorTextNight</item>
    </style>

    <style name="TextSecondaryLight" parent="@style/BaseTextView">
        <item name="android:textAppearance">@style/RobotoRegular</item>
        <item name="android:textColor">@color/colorTextNight</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

    <style name="TextSecondaryLight_60" parent="@style/BaseTextView">
        <item name="android:textAppearance">@style/RobotoRegular</item>
        <item name="android:textColor">@color/colorTextNight</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

    <style name="TextDescriptionLight" parent="@style/BaseTextView">
        <item name="android:textAppearance">@style/RobotoRegular</item>
        <item name="android:textColor">@color/colorTextNight</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
    </style>

    <style name="TextDescriptionLight_60" parent="@style/BaseTextView">
        <item name="android:textAppearance">@style/RobotoRegular</item>
        <item name="android:textColor">@color/colorTextNight</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
    </style>

    <style name="TextEmptyLight" parent="@style/BaseTextView">
        <item name="android:textAppearance">@style/RobotoRegular</item>
        <item name="android:textColor">@color/colorTextNight</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="TextDividerLight" parent="@style/BaseTextView">
        <item name="android:textAppearance">@style/RobotoRegular</item>
        <item name="android:textColor">@color/colorTextNight</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textSize">@dimen/font_size_10sp</item>
    </style>

</resources>
