<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="item_margin" format="dimension" />
        <attr name="item_height" format="dimension" />
        <attr name="item_color" format="color" />
        <attr name="item_selected_color" format="color" />
        <attr name="style_item" format="integer" />
    </declare-styleable>

    <declare-styleable name="BalanceTextView">
        <attr name="primary_color" format="color" />
        <attr name="secondary_color" format="color" />
        <attr name="separator" format="enum">
            <enum name="dot" value="0" />
            <enum name="comma" value="1" />
            <enum name="undefined" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SwipeLayout">
        <attr name="swipe_gravity">
            <enum name="left" value="-1" />
            <enum name="right" value="1" />
            <enum name="center" value="0" />
        </attr>
        <attr name="swipe_enabled" format="boolean" />
        <attr name="swipe_left_enabled" format="boolean" />
        <attr name="swipe_right_enabled" format="boolean" />
    </declare-styleable>

</resources>