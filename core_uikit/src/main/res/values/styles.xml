<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@color/colorAccent</item>

        <item name="android:windowExitAnimation">@anim/fade_out</item>

        <item name="android:navigationBarColor">#00000000</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <style name="LightAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/colorText</item>

        <item name="android:navigationBarColor">#4D000000</item>
        <item name="android:statusBarColor">#4D000000</item>
    </style>

</resources>
