<?xml version="1.0" encoding="utf-8"?>
<com.kapmayn.coreuikit.widgets.DividerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingStart="@dimen/left_right_margin"
    android:paddingEnd="@dimen/left_right_margin">

    <TextView
        android:id="@+id/dividerTitle"
        style="@style/TextOverlineDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textAllCaps="true"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Title" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="@color/colorDivider" />
</com.kapmayn.coreuikit.widgets.DividerView>