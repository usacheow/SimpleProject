<?xml version="1.0" encoding="utf-8"?>
<com.usacheow.coreuikit.views.SimpleAppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appBarLayout"
    android:fitsSystemWindows="true"
    style="@style/SimpleAppBarLayout">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsingToolbarLayout"
        android:fitsSystemWindows="true"
        style="@style/SimpleCollapsingToolbar">

        <View
            android:id="@+id/insetView"
            android:fitsSystemWindows="true"
            style="@style/SimpleCollapsingToolbarContent" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/SimpleToolbar" />
    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.usacheow.coreuikit.views.SimpleAppBarLayout>