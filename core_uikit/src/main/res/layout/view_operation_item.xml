<?xml version="1.0" encoding="utf-8"?>
<com.usacheow.coreuikit.widgets.OperationItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_rectangle"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/left_right_margin">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/operationImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        app:riv_corner_radius="24dp"
        tools:src="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/operationTypeView"
                style="@style/TextOverline_60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                tools:text="Оплата сотовой связи" />

            <TextView
                android:id="@+id/operationCardNumberView"
                style="@style/TextOverline_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                tools:text="*1234" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/operationNameView"
                style="@style/TextBody1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                tools:text="Билайн Москва" />

            <com.usacheow.coreuikit.views.BalanceTextView
                android:id="@+id/operationSumView"
                style="@style/TextBody1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                app:separator="dot"
                app:primary_color="@color/colorText"
                app:secondary_color="@color/colorTextSecondary"
                tools:text="-500.00 Р" />
        </LinearLayout>
    </LinearLayout>
</com.usacheow.coreuikit.widgets.OperationItemView>