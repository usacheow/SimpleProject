<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pinCodeRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/left_right_margin"
    android:gravity="center|bottom">

    <com.usacheow.featureauth.presentation.view.PinCodeView
        android:id="@+id/pinCodeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pinCodeForgotButton"
        style="@style/TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="?selectableItemBackground"
        android:text="@string/pin_view_code_forgot"
        android:textColor="@color/colorAccent" />
</LinearLayout>