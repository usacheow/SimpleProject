<?xml version="1.0" encoding="utf-8"?>
<com.usacheow.coreui.uikit.molecule.CellTileView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="horizontal">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/mainClickablePartView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:clickable="false"
        android:orientation="horizontal">

        <Space
            android:layout_width="@dimen/left_right_margin"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/leftView"
            android:layout_width="@dimen/cell_left_parts_width"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/cell_content_vertical_padding"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/cell_content_vertical_padding">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/leftIconView"
                android:layout_width="@dimen/cell_icon_size"
                android:layout_height="@dimen/cell_icon_size"
                android:visibility="visible"
                android:padding="8dp"
                tools:background="@drawable/bg_ic_square"
                tools:srcCompat="@drawable/ic_lock" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/leftLogoView"
                android:layout_width="@dimen/cell_icon_size"
                android:layout_height="@dimen/cell_icon_size"
                android:background="@drawable/bg_ic_square"
                android:visibility="gone" />
        </FrameLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/middleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/cell_content_vertical_padding">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/subtitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textAppearance="?textAppearanceBodyMedium"
                android:textColor="?colorSymbolSecondary"
                tools:text="@tools:sample/lorem/random" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:textAppearance="?textAppearanceBodyLarge"
                android:textColor="?colorSymbolPrimary"
                tools:text="@tools:sample/lorem/random" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/valueView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:ellipsize="end"
                android:lines="1"
                android:textAppearance="?textAppearanceTitleLarge"
                android:textColor="?colorSymbolPrimary"
                tools:text="Value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/additionalView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:lines="1"
                android:textAppearance="?textAppearanceBodyMedium"
                android:textColor="?colorSymbolSecondary"
                tools:text="@tools:sample/lorem/random" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/linkView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:lines="1"
                android:textAppearance="?textAppearanceBodyLarge"
                android:textColor="?colorPrimary"
                tools:text="@tools:sample/lorem" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <FrameLayout
        android:id="@+id/rightView"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/cell_right_parts_width"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground"
        android:clickable="false"
        android:paddingVertical="@dimen/cell_content_vertical_padding"
        android:paddingEnd="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rightIconView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center|end"
            android:visibility="gone"
            tools:srcCompat="@drawable/ic_next" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rightLogoView"
            android:layout_width="@dimen/cell_icon_size"
            android:layout_height="@dimen/cell_icon_size"
            android:visibility="gone" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_gravity="center"
            app:showText="false" />
    </FrameLayout>
</com.usacheow.coreui.uikit.molecule.CellTileView>
