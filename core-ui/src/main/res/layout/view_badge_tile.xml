<?xml version="1.0" encoding="utf-8"?>
<com.usacheow.coreui.uikit.molecule.BadgeTileView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/radius_medium"
    app:cardElevation="@dimen/elevation_32">

    <LinearLayout
        android:id="@+id/clickableView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:orientation="vertical"
        android:padding="@dimen/left_right_margin">

        <TextView
            android:id="@+id/headerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:alpha="@dimen/text_alpha"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="156dp"
            android:minWidth="120dp"
            android:textAppearance="?textAppearanceBody2"
            tools:text="@tools:sample/cities" />

        <TextView
            android:id="@+id/valueView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:maxWidth="156dp"
            android:minWidth="120dp"
            android:textAppearance="?textAppearanceBody1"
            tools:text="@tools:sample/us_zipcodes" />
    </LinearLayout>
</com.usacheow.coreui.uikit.molecule.BadgeTileView>