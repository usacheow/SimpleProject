<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="?colorPrimary" />
            <corners android:radius="@dimen/switch_radius" />
            <size android:width="@dimen/switch_height" android:height="@dimen/switch_height" />
            <stroke android:width="4dp" android:color="@color/transparent" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="?colorOnSurface" />
            <corners android:radius="@dimen/switch_radius" />
            <size android:width="@dimen/switch_height" android:height="@dimen/switch_height" />
            <stroke android:width="4dp" android:color="@color/transparent" />
        </shape>
    </item>
</selector>