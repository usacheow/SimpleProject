<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/stroke_card"
                android:color="?colorOutline" />
            <corners
                android:bottomLeftRadius="@dimen/radius_medium"
                android:bottomRightRadius="@dimen/radius_medium"
                android:topLeftRadius="@dimen/radius_medium"
                android:topRightRadius="@dimen/radius_medium" />
        </shape>
    </item>
    <item>
        <ripple android:color="?colorPrimaryContainer">
            <item android:id="@android:id/mask">
                <shape>
                    <corners android:radius="@dimen/radius_medium" />
                    <solid android:color="?colorOutline" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>